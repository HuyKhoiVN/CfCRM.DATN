     function generateDishCode(str) {
            return str
                .normalize("NFD")                         // Tách dấu ra khỏi ký tự
                .replace(/[\u0300-\u036f]/g, "")          // Xoá các dấu
                .replace(/[^a-zA-Z0-9]/g, "")             // Loại bỏ ký tự đặc biệt
                .toLowerCase();                           // Viết thường
        }

