    }
    function validateInput(id) {
        var updatingItemId = id;
        var errorList = [];
        if ($("#dish-dishCode").val() == '') {
            errorList.push('Mã món không được để trống.');
        }

        if ($("#dish-dishName").val() == '') {
            errorList.push('Tên món không được để trống.');
        } else if (!$("#dish-dishName").val().match(regexFullName)) {
            errorList.push('Tên món không được chứa kí tự đặc biệt.');
        }
        if ($("#dish-dishName").val().length > 255) {
            errorList.push('Tên món có độ dài tối đa là 255 ký tự.');
        }
        if ($("#dish-price").val() == '') {
            errorList.push('Giá món không được để trống.');
        } else if (!$("#dish-price").val().match(regexPrice)) {
            errorList.push('Giá món chỉ được chứa số.');
        }
        if ($("#dish-dishCategoryId").val() == '') {
            errorList.push('Nhóm món không được để trống.');
        }
        if (errorList.length > 0) {
            var contentError = '<ul>';
